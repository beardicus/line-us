{
  "name": "@beardicus/line-us",
  "version": "0.0.1",
  "description": "A library for accessing Line-us drawing robots via Node.js and the browser.",
  "main": "src/LineUs.js",
  "scripts": {
    "bundle": "npm run umd && npm run minify",
    "umd": "browserify src/LineUs.js --standalone LineUs -o ./dist/line-us.js",
    "minify": "npx terser --compress --mangle -o ./dist/line-us.min.js ./dist/line-us.js",
    "pretest": "prettier --write src/*.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/beardicus/line-us.git"
  },
  "bugs": {
    "url": "https://github.com/beardicus/line-us/issues"
  },
  "homepage": "https://github.com/beardicus/line-us#readme",
  "files": [
    "dist/*"
  ],
  "author": {
    "name": "Brian Boucheron",
    "email": "brian@boucheron.org",
    "url": "https://boucheron.org/brian"
  },
  "keywords": [
    "lineus",
    "line-us",
    "plotter",
    "drawing"
  ],
  "license": "MIT",
  "dependencies": {
    "isomorphic-ws": "^4.0.1",
    "lowercase-keys": "^1.0.1",
    "nanobus": "^4.4.0",
    "p-event": "^2.1.0",
    "p-queue": "^3.0.0",
    "ws": "^6.1.2"
  },
  "devDependencies": {
    "browserify": "^16.2.3",
    "terser": "^3.13.1",
    "prettier": "1.13.6"
  },
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "trailingComma": "es5",
    "arrowParens": "always"
  }
}
